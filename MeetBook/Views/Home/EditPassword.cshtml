
@{
    ViewData["Title"] = "Edit Password";
}
<br />
<br />
<br />
<br />
<div class="row">
    <div class="profile-img">
        <img src=@ViewBag.image alt="" style="border-radius: 50%; width:12%" class="text-center"/>  
    </div>
    <h2 class="mt-3 center">@Model.user.Fname @Model.user.Lname</h2>
</div>
<div class="container profile" @*style="display: none;*@">
    <div class="row mt-2">
        <!-- <div class="editPageGrid"> -->
            <div class="col-md-2 EditOption">
                <div style="float: none;">
                    <a class="editButtonStyle center" style="padding-right: 5px; text-decoration: none;" href="/Home/EditProfile">Profile</a>
                </div>
                <div>
                    <a class="editButtonStyle center" style="padding-right: 5px; text-decoration: none;" href="/Home/EditPassword">Change Password</a>
                </div>
            </div>
            <div class="col-md-7 EditFormOption text-white">
                <form action="/Home/EditPassword" method="post" onsubmit="return myValidation();">
                    <div class="row mb-3 editFeilds">
                        <label for="OldPass" class="col-sm-2 col-form-label">Old Password: </label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="OldPassword" name="oldPass">
                            <div style="text-align: left; font-size: 12px; color:red;" >
                                <span id="IncorrectPassword"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3 editFeilds">
                        <label for="newPaa" class="col-sm-2 col-form-label">New Password: </label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="pass" name="NewPassword">
                            <input type="checkbox" onclick="showPassword()" /><label class="form-label designLable" 
                            style="color: white; font-family:serif;">Show Password</label><br>
                        </div>
                    </div>
                    <div class="row mb-3 editFeilds">
                        <label for="ConfirmPass" class="col-sm-2 col-form-label">Confirm Password: </label>
                        <div class="col-sm-8">
                            <input type="password"  id="passC" class="form-control" name="Cpwd" 
                            placeholder="Confirm Password" onkeyup=" confirmPassword();" required />
                            <span id="messageError" style="color: red; font-family:serif;"></span>
                            <input type="checkbox" onclick="showPasswordC()" />
                            <label class="form-label designLable" style="color: white; font-family:serif;">
                                Show Password
                            </label><br>
                        </div>
                    </div>
                    <button type="submit" class="btn form_color formButton" style="color: white;">Save</button>
                </form>
            </div>
        <!-- </div> -->
    </div>
</div>