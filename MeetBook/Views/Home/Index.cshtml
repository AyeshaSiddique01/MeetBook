
@{
    ViewData["Title"] = "Log_In";
}

<div class="row container" style="padding: 120px 0px 0px 10px;">
    <div class="col-md-7" style="float:left; padding: 45px 50px 0px 0px;">
        <div style="font-size: 35px; color: white; font-family: serif;">
            <p>MeetBook</p>
        </div>
        <div style="font-size:20px; font-family:serif; color: white;">
            <p>Meetbook helps you connect and share with the people in your life.</p>
        </div>
    </div>
    <div class="col-md-5" style="float:left; color:white; width: 350px;">
        <div class="form_color" style="padding: 10px 30px 0px 30px;">
            <form action="/Home/Login" method="post">
                <div class="form-group"  style="padding: 5px 0px 10px 0px;">
                    <input type="text" class="form-control" name="email" placeholder="Email Address or Phone Number" required />
                </div>
                <div style="text-align: center; font-size: 12px; color:red">
                    <p><b>@Model</b></p>
                </div>
                <div class="form-group" style="padding: 0px 0px 10px 0px;">
                    <input type="password" id="pass" class="form-control" name="pwd" placeholder="Password" required />
                    <span style="color: rgb(0, 0, 0);font-family:serif; "></span>
                    <input type="checkbox" onclick="showPassword()" /> Show Password
                </div>
                <div class="form-group" style="padding: 0px 0px 10px 0px;">
                    <button type="submit" class="form-control btn form_btnColor submit px-3 designLable formButton" >Log In</button>
                </div>
                <hr />
                <div class="form-group" style="text-align: center;">
                    <a class="form-control btn submit px-3" asp-area="" asp-controller="Home" 
                    asp-action="SignUp" style="width: fit-content; background-color: #1186ef;">Create New Account</a>
                </div>
            </form>
            <br />
        </div>
    </div>
</div>
@section s1{
    <script>
        function showPassword() {
            var x = document.getElementById("pass");
            if (x.type == "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>
}