
@{
    ViewData["Title"] = "Followers";
}
@model List<UserAccount>
<br />
<br />
<br />
<div class="container">
    <div style="text-align: center; font-size: 34px; color: #b3cdff; font-family: serif;}">
        <p>Followers</p>
    </div>
    <div class="row row-space-2">
        @if (Model.Count > 0)
        {
            <div class="friendsGrid">
            @for (var i = Model.Count - 1; i >= 0; i--)
            {
                <div class="friend form_color"><partial name="_FollowersPartialView" model="@Model[i]" /></div>
            }
            </div>
        }
        else
        {
            <div style="text-align: center; font-size: 20px; color: #b3cdff; font-family: serif;}">
                <p>No Friend to show</p>
        </div>
    }
    </div>
</div>