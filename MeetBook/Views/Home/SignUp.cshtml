
@{
    ViewData["Title"] = "Sign-Up";
}

<div class="col-md-6 col-lg-4 centerDiv">
    <div style="text-align: center; font-size: 25px; margin:20px;  color: white;">
        <p><b>Create New Account</b></p>
    </div>    
    <div class="form_color" style="padding: 10px 30px 0px 30px;; width: 106%;">
        <form action="/Home/SignUp" method="post" onsubmit="return myValidation();">
            
            <div class="form-group" style="padding: 0px 0px 10px 0px;">
                <input type="text" class="form-control" name="LoginId" placeholder="Login Id" required />
            </div>

            <div class="form-group" style="padding: 0px 0px 10px 0px;">
                <input type="text" class="form-control" name="FName" placeholder="First Name" required />
            </div>

            <div class="form-group" style="padding: 0px 0px 10px 0px;">
                <input type="text" class="form-control" name="LName" placeholder="Last Name" required />
            </div>          
            
            <div class="form-group" style="padding: 0px 0px 10px 0px;">
                <input type="text" class="form-control" name="PhoneNo" id="PhoneNo" placeholder="Phone Number" required />
            </div>
            <div style="text-align: left; font-size: 12px; color:red;" >
                <span id="phoneExistDiv"></span>
            </div>
            <div class="form-group" style="padding: 0px 0px 10px 0px;">
                <input type="email" class="form-control" name="email" id="email" placeholder="Email Address" required />
            </div>
            <div style="text-align: left; font-size: 12px; color:red;" >
                <span id="emailExistDiv"></span>
            </div>
            <div class="form-group" style="padding: 0px 0px 10px 0px;">
                <label class="form-label designLable" for="Genders" style="color: white; font-family:serif;">Gender:</label>
                <select class="form-label designLable" name="Gender">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>

            <div class="form-group" style="padding: 0px 0px 10px 0px;">
                <label class="form-label designLable" for="Age" style="color: white; font-family:serif;">Date Of Birth:</label>
                <input class="form-control" type="date" name="DOB" runat="server" value="<%=DateTime.Now%>" style="height: 30px; width: 267px">

            </div>
            <div class="form-group" style="padding: 0px 0px 10px 0px;">
                <input type="password"  id="pass" class="form-control" name="pwd" placeholder="Password" required />
                <input type="checkbox" onclick="showPassword()" /><label class="form-label designLable" style="color: white; font-family:serif;">Show Password</label><br>
            </div>

            <div class="form-group" style="padding: 0px 0px 10px 0px;">
                <input type="password"  id="passC" class="form-control" name="Cpwd" placeholder="Confirm Password" onkeyup=" confirmPassword();" required />
                <span id="messageError" style="color: red; font-family:serif;"></span>
                <input type="checkbox" onclick="showPasswordC()" /><label class="form-label designLable" style="color: white; font-family:serif;">Show Password</label><br>
            </div>

            <div class="form-group" style="padding: 0px 0px 10px 0px;">
                <button class="form-control btn form_btnColor submit px-3 formButton" 
                style="font-family:serif; color:white" id="signup">Sign Up</button>
            </div>
            <div style="text-align: center; font-size: 12px; color:red;" >
                <p><b>@Model</b></p>
            </div>
        </form><br />
    </div>
</div>
